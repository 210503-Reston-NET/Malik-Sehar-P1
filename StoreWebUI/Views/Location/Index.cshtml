@model IEnumerable<StoreWebUI.Models.LocationVM>

@{
    ViewData["Title"] = "Stores to Shop on";
}

<h1>Stores</h1>

<p>
    <a asp-action="Create" class="btn btn-brown">Add Store</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.ActionLink("Add Products", "Create", "Products", new { id = item.Id }, new { @class = "btn btn-pink" })
                @Html.ActionLink("View Inventory", "Index", "Inventory", new { id = item.Id }, new { @class = "btn btn-yellow" })
                @Html.ActionLink("Order here", "Index", "Products", new { id = item.Id }, new { @class = "btn btn-yellow" })
                @Html.ActionLink("View Orders", "ViewOrders", "Orders", new { id = item.Id }, new { @class = "btn btn-yellow" })
            </td>
        </tr>
}
    </tbody>
</table>
