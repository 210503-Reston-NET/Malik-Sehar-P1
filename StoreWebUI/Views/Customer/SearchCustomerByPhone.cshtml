@model StoreWebUI.Models.CustomersVM

@{
    ViewData["Title"] = "Search a Customer";
}

<h1>Search Customer</h1>

<h4>Customers</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="SearchCustomerByPhone1">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PhoneNum" class="control-label"></label>
                <input asp-for="PhoneNum" class="form-control" />
                <span asp-validation-for="PhoneNum" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Search" class="btn btn-pink" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-brown">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
