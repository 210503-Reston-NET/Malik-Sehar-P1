@model IEnumerable<StoreWebUI.Models.OrdersVM>

@{
    ViewData["Title"] = "View Orders";
}

<h1>Orders History</h1>
<table class="table table-hover">
    <thead>
        <tr>
            <th>
                ID
            </th>
            <th>
                <a asp-action="ViewOrders" asp-route-id="@ViewBag.Locid" asp-route-date="@ViewData["dateSorting"]" class="text-dark" style="text-decoration:none;">
                    Date
                </a>
            </th>
            <th>
                <a asp-action="ViewOrders" asp-route-id="@ViewBag.Locid" asp-route-date="@ViewData["totalsorting"]" class="text-dark" style="text-decoration:none;">
                    Total
                </a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Id
                </td>
                <td>
                    @item.date
                </td>
                <td>$@item.Total</td>
                <td>@Html.ActionLink("Order Details", "OrderDetails", new { id = item.Id }, new { @class = "btn btn-brown" })</td>
            </tr>
        }
    </tbody>
</table>
