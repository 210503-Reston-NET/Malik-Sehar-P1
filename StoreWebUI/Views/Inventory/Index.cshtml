@model IEnumerable<StoreWebUI.Models.InventoryVM>

@{
    ViewData["Title"] = "Inventory";
}

<h1>Index</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                Store
            </th>
            <th>
                Product
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                Price
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StoreFront.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Product.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>@Html.DisplayFor(modelItem => item.Product.Price).00</td>
            <td>
                @Html.ActionLink("Edit", "Edit", "Inventory", new {  Id=item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id=item.Id }, new { storeid = item.StoreId })
            </td>
        </tr>
}
    </tbody>
</table>
